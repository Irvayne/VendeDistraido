<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufpi.easii.es.vendedistraido">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.CadastroClienteActivity" />
        <activity android:name=".view.gestor.GestorActivity" />
        <activity android:name=".view.corretor.CorretorActivity" />
        <activity android:name=".view.gestor.CadastraCorretorActivity" />
        <activity android:name=".view.corretor.CadastraImovelActivity" />
        <activity android:name=".view.cliente.ClienteActivity" />
        <activity android:name=".view.gestor.ListarCorretoresActivity" />
        <activity android:name=".view.gestor.ListarImoveisActivity" />
        <activity
            android:name=".view.corretor.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".view.cliente.MapaClienteActivity"
            android:label="@string/title_activity_mapa_cliente" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".view.corretor.ImovelActivity" />
        <activity android:name=".view.cliente.ImovelClienteActivity" />
        <activity android:name=".view.corretor.ImovelCorretorActivity" />
    </application>

</manifest>