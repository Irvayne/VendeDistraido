<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/back"
    tools:context=".view.CadastroClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp">
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/logo_nf"/>

            <EditText
                android:hint="@string/nome"
                android:id="@+id/cadastro_edt_nome"
                style="@style/DefaltEditText"/>

            <EditText
                android:id="@+id/cadastro_edt_email"
                android:inputType="textEmailAddress"
                android:hint="@string/email"
                style="@style/DefaltEditText"/>

            <EditText
                android:id="@+id/cadastro_edt_telefone"
                android:hint="@string/telefone"
                android:inputType="phone"
                style="@style/DefaltEditText"
                />

            <EditText
                android:id="@+id/cadastro_edt_senha"
                android:hint="@string/senha"
                android:inputType="textPassword"
                style="@style/DefaltEditText"
                />
            <EditText
                android:id="@+id/cadastro_edt_confirmeSenha"
                android:hint="@string/confirmar_senha"
                android:inputType="textPassword"
                style="@style/DefaltEditText"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:text="@string/cadastrar"
                android:id="@+id/cadastro_btn_cadastrar"
                style="@style/DefaltButton"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>